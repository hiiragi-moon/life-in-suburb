---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
    <div class="title contact">
        <p>CONTACT</p>
    </div>

    <div class="slim-content-part">
        <div class="form">

        
        <div class="formtitle">
            <h1>Contact Form</h1>
        </div>

        <form action="https://ssgform.com/s/CM4lOJZXjPJ0" method="post">
            <div class="list-group">
                <div class="list-name">
                    <label for="name" class="required">お名前</label>
                </div>
                <div class="list-box">
                    <input type="text" id="name" name="name" required />
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="furigana" class="required">フリガナ</label>
                </div>
                <div class="list-box">
                    <input type="text" id="furigana" name="furigana" required />
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="company"
                        >会社名 (法人様の場合はご記入ください)</label
                    >
                </div>
                <div class="list-box">
                    <input type="text" id="company" name="company" />
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="email" class="required">メールアドレス</label>
                </div>
                <div class="list-box">
                    <input type="email" id="email" name="email" required />
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="phone1" class="required">電話番号</label>
                </div>
                <div class="list-box">
                    <div class="phone-split">
                        <input id="phone1" name="phone1" required />ー
                        <input id="phone2" name="phone2" required />ー
                        <input id="phone3" name="phone3" required />
                    </div>
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="postal_code1" class="required">郵便番号</label>
                </div>
                <div class="list-box">
                    <div class="postal-code-split">
                        〒<input
                            type="text"
                            id="postal_code1"
                            name="postal_code1"
                            required
                        />ー
                        <input
                            type="text"
                            id="postal_code2"
                            name="postal_code2"
                            required
                        />
                    </div>
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="address" class="required">住所</label>
                </div>
                <div class="list-box">
                    <input type="text" id="address" name="address" />
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="inquiry_type" class="required"
                        >お問い合わせ種別</label
                    >
                </div>
                <div class="list-box">
                    <select id="inquiry_type" name="inquiry_type" required>
                        <option value="">選択してください</option>
                        <option value="住宅新築">住宅新築</option>
                        <option value="住宅リフォーム">住宅リフォーム</option>
                        <option value="店舗新築">店舗新築</option>
                        <option value="店舗リフォーム">店舗リフォーム</option>
                        <option value="その他問い合わせ"
                            >その他問い合わせ</option
                        >
                    </select>
                </div>
            </div>
            <div class="list-group">
                <div class="list-name">
                    <label for="message">お問い合わせ内容</label>
                </div>
                <div class="list-box">
                    <textarea class="message" name="message"></textarea>
                </div>
            </div>

            <div class="button_area">
                <button type="submit">確定</button>
            </div>
        </form>

        <div id="notification"></div>
    </div>
    </div>

    <hr />

    <style>
        /* スタイルはそのまま保持 */
        #notification {
            font-size: 16px;
            padding: 10px;
            margin-top: 20px;
            border-radius: 5px;
            text-align: center;
            display: none;
        }
        .contact {
            background: url(/images/contact_page/contact.jpg) no-repeat center
                center;
            background-size: cover;
            background-position: center;
            overflow: hidden;
        }
        .formtitle h1 {
            font-size: 30px;
            margin-bottom: 30px;
        }
        .list-group {
            text-align: center;
        }
        .list-name {
            text-align: left;
            margin-bottom: 2%;
        }
        .list-box input,
        .list-box select {
            padding: 7px;
            border: 1px solid #000000;
            margin-bottom: 4%;
            width: 100%;
        }
        .list-box textarea {
            padding: 10px 10px 50px;
            border: 1px solid #000000;
            margin-bottom: 4%;
            width: 100%;
        }
        .phone-split,
        .postal-code-split {
            text-align: left;
        }
        .phone-split input {
            width: 100px;
            margin-left: 1%;
            margin-right: 1%;
        }
        .phone-split input:first-child {
            margin-left: 0;
        }
        .postal-code-split input {
            width: 110px;
            margin-left: 1%;
            margin-right: 1%;
        }
        .phone-split,
        .postal-code-split {
            align-items: center;
        }
        .required:after {
            content: "必須";
            margin-left: 10px;
            padding: 3px;
            font-size: 13px;
            color: #626262;
            border: 1px solid #626262;
        }
        .button_area {
            text-align: center;
            margin-top: 5%;
            margin-bottom: 5%;
        }
        #inquiry_type option[value=""] {
            color: gray;
        }
        .button_area button {
            border: 1px solid #000000;
            color: rgb(0, 0, 0);
            padding: 30px 100px;
            transition: 0.5s ease;
        }
        .button_area button:hover {
            color: #ffffff;
            background-color: #000000;
        }
        @media (max-width: 799px) {
            .list-box input,
            .list-box select {
                padding: 4px;
                border: 1px solid #000000;
                margin-bottom: 4%;
                width: 100%;
            }
            .phone-split input {
            width: 50px;
            }
            .postal-code-split input {
                width: 60px;
            }
        }
    </style>
</BaseLayout>
