<!-- Loading -->
<div id="loading">
	<img class="spinner" src="/images/loading.webp" alt="loading" />
</div>

<style>
	#loading {
		transition: all 1s;
		background-color: #fffefe;
		position: fixed;
		z-index: 9999;
		inset: 0;
		display: grid;
		place-items: center;
	}

	.spinner {
		width: 50px;
		height: 50px;
		animation: spin 1s linear infinite; /* 回転アニメーション */
	}

	.loaded {
		opacity: 0;
		visibility: hidden;
	}
	/* 回転アニメーションの定義 */
	@keyframes spin {
		from {
			transform: rotate(0deg);
		}
		to {
			transform: rotate(360deg);
		}
	}
</style>

<script src="/js/loading.js" defer></script>
